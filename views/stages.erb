<h1>Festival Stages</h1>
<% if not @stages.empty? %>
  <ul>
    <% @stages.each do |stage| %>
      <li>
        <a href="/stages/<%= stage.id %>"><%= stage.name %></a>
        <form action="/stages/<%= stage.id %>" method="post">
          <input name="_method" type="hidden" value="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No stages yet</p>
<% end %>
<a href="/stages/new">Add a new stage</a>
